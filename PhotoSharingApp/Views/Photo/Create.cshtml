@model PhotoSharingApp.Models.Photo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create New Photo</title>
</head>
<body>
    <div>
        <h2>Create New Photo</h2>
        @using (Html.BeginForm("Create", "Photo", FormMethod.Post, new
        {
            enctype =
    "multipart/form-data"
        }))
        {
            @Html.ValidationSummary(true)
            <p>
                @Html.LabelFor(models =>
     models.Title):
                @Html.EditorFor(models =>
     models.Title)
                @Html.ValidationMessageFor(
     models => models.Title)
            </p>
            <p>
                @Html.LabelFor(
     models => models.PhotoFile):
                <input type="file" name="Image" />
            </p>
            <p>
                @Html.LabelFor(
     models => models.Description):
                @Html.EditorFor(
     models => models.Description)
                @Html.ValidationMessageFor(
     models => models.Description)
            </p>
            <p>
                @Html.LabelFor(
     models => models.Owner):
                @Html.DisplayFor(
     models => models.Owner)
            </p>
            <p>
                @Html.LabelFor(
     models => models.CreateDate):
                @Html.DisplayFor(
     models => models.CreateDate)
            </p>
            <p>
                <input type="submit"
                       value="Create" />
                @Html.ActionLink("Back to List",
     "Index")
            </p>
        }
    </div>
</body>
</html>